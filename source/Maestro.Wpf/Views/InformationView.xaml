<UserControl x:Class="Maestro.Wpf.Views.InformationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Maestro.Wpf"
        xmlns:converters="clr-namespace:Maestro.Wpf.Converters"
        xmlns:controls="clr-namespace:Maestro.Wpf.Controls"
        xmlns:viewModels="clr-namespace:Maestro.Wpf.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:FlightInformationViewModel}"
        Background="{x:Static local:Theme.BackgroundColor}"
        MinWidth="640"
        MinHeight="80"
        Padding="8">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Maestro.Wpf;component/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:WakeCategoryConverter x:Key="WakeCategoryConverter" />
            <converters:TimeConverter x:Key="TimeConverter" />
            <converters:MinutesConverter x:Key="MinutesConverter" />

            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource GenericTextStyle}" />

        </ResourceDictionary>
    </UserControl.Resources>

    <controls:GridWithBorder
        BorderBrush="{x:Static local:Theme.GenericTextColor}"
        BorderThickness="1.5">

        <controls:GridWithBorder.ColumnDefinitions>
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="160" />
        </controls:GridWithBorder.ColumnDefinitions>

        <controls:GridWithBorder.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="40" />
        </controls:GridWithBorder.RowDefinitions>

        <!-- Number to Land -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding NumberInSequence}" TextAlignment="Center" VerticalAlignment="Center" />

        <!-- Flight info -->
        <Grid Grid.Column="0" Grid.Row="1" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding Callsign}" />
            <TextBlock Grid.Column="1" Grid.Row="0">
                <Run Text="{Binding AircraftType, Mode=OneWay}"/>/<Run Text="{Binding WakeCategory, Mode=OneWay, Converter={StaticResource WakeCategoryConverter}}" />
            </TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding OriginIdentifier}" />
            <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding DestinationIdentifier}" />
        </Grid>

        <!-- Feeder Fix header -->
        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding FeederFixIdentifier}" TextAlignment="Center" VerticalAlignment="Center" />

        <!-- Feeder Fix data -->
        <Grid Grid.Column="1" Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Text="ETA-FF"/>
            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding InitialFeederFixEstimate, Converter={StaticResource TimeConverter}}"/>
            <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding FeederFixEstimate, Converter={StaticResource TimeConverter}}"/>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="STA-FF"/>
            <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding FeederFixTime, Converter={StaticResource TimeConverter}}"/>
        </Grid>

        <!-- Runway header -->
        <TextBlock Grid.Column="2" Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center" >
            <Run Text="{Binding AssignedRunwayIdentifier, Mode=OneWay}"/>/<Run Text="{Binding NumberToLandOnRunway, Mode=OneWay}"/>
        </TextBlock>

        <!-- Runway data -->
        <Grid Grid.Column="2" Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Text="ETA"/>
            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding InitialLandingEstimate, Converter={StaticResource TimeConverter}}"/>
            <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding LandingEstimate, Converter={StaticResource TimeConverter}}"/>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="STA"/>
            <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding LandingTime, Converter={StaticResource TimeConverter}}"/>
        </Grid>

        <!-- Delay header -->
        <TextBlock Grid.Column="3" Grid.Row="0" Text="Delay" TextAlignment="Center" VerticalAlignment="Center" />

        <!-- Delay data -->
        <Grid Grid.Column="3" Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0">
                <Run Text="{Binding InitialDelay, Mode=OneWay, Converter={StaticResource MinutesConverter}}"/>mn
            </TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="1">
                <Run Text="{Binding RemainingDelay, Mode=OneWay, Converter={StaticResource MinutesConverter}}"/>mn
            </TextBlock>
        </Grid>
    </controls:GridWithBorder>
</UserControl>
