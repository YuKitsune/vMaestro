                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Airport"/>
            <ComboBox
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding AirportConfigurations}"
                SelectedValue="{Binding SelectedAirport, Mode=TwoWay}"
                SelectedValuePath="Identifier"
                DisplayMemberPath="Identifier"
