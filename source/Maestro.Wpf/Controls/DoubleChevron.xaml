<UserControl x:Class="Maestro.Wpf.Controls.DoubleChevron"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Maestro.Wpf"
             xmlns:converters="clr-namespace:Maestro.Wpf.Converters"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d"
             d:DesignHeight="8" d:DesignWidth="8">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Maestro.Wpf;component/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:DirectionToRotationAngleConverter x:Key="DirectionToRotationAngleConverter" />

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Width="8" Height="8">
        <Canvas>
            <!-- First chevron -->
            <Path
                Fill="{Binding Foreground}"
                Canvas.Left="0"
                Canvas.Top="0"
                Data="M4,0 L8,4 L0,4 z">
                <Path.RenderTransform>
                    <RotateTransform CenterX="4" CenterY="2" Angle="{Binding Direction, Converter={StaticResource DirectionToRotationAngleConverter}}" />
                </Path.RenderTransform>
            </Path>

            <!-- Second chevron -->
            <Path
                Fill="{Binding Foreground}"
                Canvas.Left="0"
                Canvas.Top="4"
                Data="M4,0 L8,4 L0,4 z">
                <Path.RenderTransform>
                    <RotateTransform CenterX="4" CenterY="2" Angle="{Binding Direction, Converter={StaticResource DirectionToRotationAngleConverter}}" />
                </Path.RenderTransform>
            </Path>
        </Canvas>
    </Grid>
</UserControl>
